{
  "name": "@skadi/root",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Skadi monorepo for Node.js TypeScript libraries",
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=22.17.1",
    "pnpm": ">=10.13.1"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release:npm": "pnpm build && changeset publish",
    "release:github": "pnpm build && pnpm -r --filter ./packages/* exec npm publish --access public --registry=https://npm.pkg.github.com",
    "release:all": "pnpm release:npm && pnpm release:github",
    "release": "pnpm release:all"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2",
    "vitest": "catalog:"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}